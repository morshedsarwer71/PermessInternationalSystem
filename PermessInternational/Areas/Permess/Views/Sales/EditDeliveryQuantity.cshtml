@model PermessInternational.Areas.Permess.Models.DeliveryQuantity
<section class="content-header">
    <h1>
        Update Delivered Qunatity
        <small>updating delivered quantity</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" )"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>
<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="col-md-6 col-sm-6">
                @using (Html.BeginForm("EditDeliveryQuantity", "Sales", FormMethod.Post))
                {                    
                    <div class="form-group">
                        <label class="col-form-label">Quntity</label>
                        <input name="Quantity" value="@Model.Quantity" type="text" class="form-control" />
                    </div>                    
                    <div class="form-group">
                        <label class="col-form-label">Description</label>
                        <textarea class="form-control" name="Description">@Model.Description</textarea>
                    </div>
                    <div class="form-group">
                        <button id="btnSave" type="submit" value="submit" class="btn btn-info">UPDATE</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>