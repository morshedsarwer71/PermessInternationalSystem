@model PermessInternational.Areas.Permess.ViewModels.ProductSettingViewModels
<section class="content-header">
    <h1>
        Edit Order Details
        <small>editing order information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" )"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="col-md-6 col-sm-6">
                @using (Html.BeginForm("EditOrderDetails", "Sales", FormMethod.Post))
                {
                    <div class="form-group">
                        <label class="col-form-label">P.I Code</label>
                        <input value="@Model.OrderDetails.SICode" name="SICode" readonly="readonly" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Buyer Order Ref</label>
                        <textarea class="form-control" value="@Model.OrderDetails.BuyerOrderRef" name="BuyerOrderRef"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Order Detail</label>
                        <textarea class="form-control" value="@Model.OrderDetails.OrderDetail" name="OrderDetail"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Delivery Status</label>
                        <select class="form-control" name="DeliveryTypeId">
                            @foreach (var item in Model.Statuses)
                            {
                                if (Model.OrderDetails.DeliveryTypeId == item.Id)
                                {
                                    <option selected="selected" value="@item.Id">@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Approval Status</label>
                        <select class="form-control" name="ApprovalId">
                            @foreach (var item in Model.YesNoModels)
                            {
                                if (Model.OrderDetails.ApprovalId == item.Id)
                                {
                                    <option selected="selected" value="@item.Id">@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button id="btnSave" type="submit" value="submit" class="btn btn-info">UPDATE</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>