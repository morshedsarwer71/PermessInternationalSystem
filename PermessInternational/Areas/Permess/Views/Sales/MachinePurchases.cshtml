@model PermessInternational.Areas.Permess.ViewModels.MachineViewModels
@{ Layout = null;}
<section class="content-header">
    <h1>
        Machine Lists
        <small>preview of machine lists</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Machine Name</th>
                                <th>Specification</th>
                                <th>Quantity</th>
                                <th>Retension</th>
                                <th>Price</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                                    var sl = 0;
                            }
                            @foreach (var item in Model.MachinePurchases)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.MachineName</td>
                                    <td>@item.Specification</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Retension</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>
