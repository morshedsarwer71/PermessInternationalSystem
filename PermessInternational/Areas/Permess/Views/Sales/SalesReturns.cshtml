@model PermessInternational.Areas.Permess.ViewModels.SalesReturnViewModels
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        PR Info
        <small>preview of PR information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Return Code</th>
                                <th>P.I Code</th>
                                <th>Return Date</th>
                                <th>Items</th>

                            </tr>
                            @{ var sl = 0;}
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Returns)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.ReturnCode</td>
                                    <td>@item.SalesCode</td>
                                    <td>@item.ReturnDate.ToShortDateString()</td>
                                    <td>@item.Items</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>
