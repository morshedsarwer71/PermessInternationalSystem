@model IEnumerable<PermessInternational.Areas.Permess.Models.Region>
@{
    Layout = null;
}

<section class="content-header">
    <h1>
        Region Lists
        <small>preview of region lists</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var sl = 0;
                            }
                            @foreach (var item in Model)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.RegionName</td>
                                    <td><a href="@Url.Action("EditRegion","PermessData",new { id=item.RegionId})"><i class="fa fa-edit"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>