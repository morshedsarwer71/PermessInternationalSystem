@model PermessInternational.Areas.Permess.ViewModels.ExportIssuesViewModels
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Export Issue
        <small>preview of export info</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>File Num</th>
                                <th>Expo Number</th>
                                <th>Expo Issue Date</th>
                                <th>Expo Sent Date</th>
                                <th>Expo Received Date</th>
                                <th>IP Date</th>
                                <th>UP Date</th>
                                <th>Party Name</th>
                                <th>Value</th>
                                <th>Bank Submit Date</th>
                                <th>Due Date</th>
                                <th>Realize Date</th>
                                <th>Collection Date</th>
                                <th>Description</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var sl = 0;
                            }
                            @foreach (var item in Model.ExportIssues)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.FileNo</td>
                                    <td>@item.ExpoNumber</td>
                                    <td>@item.ExpoIssueDate.ToShortDateString()</td>
                                    <td>@item.ExpoSentDate.ToShortDateString()</td>
                                    <td>@item.ExpoReceivedDate.ToShortDateString()</td>
                                    <td>@item.IPDate.ToShortDateString()</td>
                                    <td>@item.UPDate.ToShortDateString()</td>
                                    <td>@item.PartyName</td>
                                    <td>@item.Value</td>
                                    <td>@item.BankSubmitDate.ToShortDateString()</td>
                                    <td>@item.DueDate.ToShortDateString()</td>
                                    <td>@item.RealizeDate.ToShortDateString()</td>
                                    <td>@item.CollectionDate.ToShortDateString()</td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>
