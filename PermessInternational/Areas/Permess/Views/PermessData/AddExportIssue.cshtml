@model PermessInternational.Areas.Permess.ViewModels.ProductSettingViewModels
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Export Docs
        <small>adding new export information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" )"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @using (Html.BeginForm("AddExportIssue", "PermessData", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="col-form-label">File Numb.</label>
                            <input name="FileNo" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Expo Number</label>
                            <input name="ExpoNumber" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Expo. Issue Date</label>
                            <input name="ExpoIssueDate" id="expoIssueDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Expo. Sent Date</label>
                            <input name="ExpoSentDate" id="expoSentDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Expo. Received Date</label>
                            <input name="ExpoReceivedDate" id="expoReceivedDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">IP Date</label>
                            <input name="IPDate" id="iPDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">UP Date</label>
                            <input name="UPDate" id="uPDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Party Name</label>
                            <input name="PartyName" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Region</label>
                            <select class="form-control" name="RegionId">
                                @foreach (var item in Model.Regions)
                                {
                                    <option value="@item.RegionId">@item.RegionName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Value</label>
                            <input name="Value" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Bank Submit Date</label>
                            <input name="BankSubmitDate" id="bankSubmitDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Due Date</label>
                            <input name="DueDate" id="dueDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Realize Date</label>
                            <input name="RealizeDate" id="realizeDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Collection Date</label>
                            <input name="CollectionDate" id="collectionDate" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Description</label>
                            <textarea class="form-control" name="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-info">SUBMIT</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>