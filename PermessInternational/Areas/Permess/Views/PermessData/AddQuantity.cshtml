<section class="content-header">
    <h1>
        Add Delivery Quantity
        <small>adding new delivery quantity</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" )"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12 col-sm-12">
                    @using (Html.BeginForm("AddQuantity", "PermessData", FormMethod.Post))
                    {
                        <div class="col-md-6 col-sm-8">
                            <div class="form-group">
                                <label class="col-form-label">Delivery Date</label>
                                <input name="DeliveryDate" id="billingDate" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Delivery Quantity</label>
                                <input name="Quantity" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button id="btnSave" type="submit" value="submit" class="btn btn-info">SUBMIT</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
<script src="~/Content/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            $(function () {
                $("#billingDate").datepicker({
                    format: "yyyy-mm-dd"
                });
            })
        })
    </script>
}
