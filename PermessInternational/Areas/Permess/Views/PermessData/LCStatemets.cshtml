@model PermessInternational.Areas.Permess.ViewModels.ResponseLCStatementsViewModels
<section class="content-header">
    <h1>
        L.C Statements
        <small>preview of LC</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-12 col-sm-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>PI Code</th>
                                    <th>LC Number</th>
                                    <th>LC Date</th>
                                    <th>Bank Name</th>
                                    <th>Sub. Date</th>
                                    <th>Party Name</th>
                                    <th>Exp. Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var sl = 0;}
                                @foreach (var item in Model.LCStatements)
                                {
                                    sl++;

                                    <tr>
                                        <td>@sl</td>
                                        <td>@item.SICode</td>
                                        <td>@item.LcNumber</td>
                                        <td>@item.LCDate.ToShortDateString()</td>
                                        <td>@item.BankName</td>
                                        <td>@item.SubmitDate.ToShortDateString()</td>
                                        <td>@item.Party</td>
                                        <td>@item.ExpDate.ToShortDateString()</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>