        $(document).ready(function () {
            $('#btnArticle').click(function () {
                var art = $('#Txtarticle').val();
                var des = $('#articledescription').val();
                $('#dvLoader').show();
                $.ajax({
                    url: "/PermessData/AddArticle",
                    type: "POST",
                    data: JSON.stringify({
                        "Article": art,
                        "Description": des
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function () {
                        //alert(result);
                        $('#dvLoader').hide();
                        Clear();
