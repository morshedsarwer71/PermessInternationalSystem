<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Product Setting Info</h3>
            </div>
            <div class="box-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#firstTab">Index</a></li>
                    <li><a data-toggle="tab" href="#article">Article</a></li>
                    <li><a data-toggle="tab" href="#construction">Construction</a></li>
                    <li><a data-toggle="tab" href="#width">Width</a></li>
                    <li><a data-toggle="tab" href="#softness">Softness</a></li>
                    <li><a data-toggle="tab" href="#color">Color</a></li>
                    <li><a data-toggle="tab" href="#source">Source</a></li>
                    <li><a data-toggle="tab" href="#category">Category</a></li>
                </ul>
                <div class="tab-content">
                    <div id="firstTab" class="tab-pane fade in active">@Html.Action("ProductSettings")</div>
                    <div id="article" class="tab-pane fade in">@Html.Action("AddArticle")</div>
                    <div id="construction" class="tab-pane fade in">@Html.Action("AddConstruction")</div>
                    <div id="width" class="tab-pane fade in">@Html.Action("AddWidth")</div>
                    <div id="softness" class="tab-pane fade in">@Html.Action("AddSoftness")</div>
                    <div id="color" class="tab-pane fade in">@Html.Action("AddColor")</div>
                    <div id="source" class="tab-pane fade in">@Html.Action("AddSource")</div>
                    <div id="category" class="tab-pane fade in">@Html.Action("AddCategory")</div>
                </div>
            </div>
        </div>
        <!-- /.box -->
        <!-- /.col -->

    </div>
</section>
@section Scripts{
