@model PermessInternational.Areas.Permess.ViewModels.ResponseCashDetailsViewModels
<section class="content-header">
    <h1>
        Cash / TT/ Cheque
        <small>preview of payment</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-12 col-sm-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>PI Code</th>
                                    <th>Issue Date</th>
                                    <th>Company Name</th>
                                    <th>Delivery</th>
                                    <th>Bill</th>
                                    <th>Billling Date</th>
                                    <th>Commision</th>
                                    <th>Total Received</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var sl = 0;}
                                @foreach (var item in Model.ResponseCashDetails)
                                {
                                    sl++;

                                    <tr>
                                        <td>@sl</td>
                                        <td>@item.SICode</td>
                                        <td>@item.IssuedDate.ToShortDateString()</td>
                                        <td>@item.Company</td>
                                        <td>@item.Delivery</td>
                                        <td>@item.Bill</td>
                                        <td>@item.BilllingDate.ToShortDateString()</td>
                                        <td>@item.Commision</td>
                                        <td>@item.TotalReceived</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>