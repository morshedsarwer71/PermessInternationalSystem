@model PermessInternational.Areas.Permess.ViewModels.OrdersViewModels
<section class="content-header">
    <h1>
        Revised Data
        <small>preview of revised data</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-md-12 col-sm-8">
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>PI Code</th>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var sl = 0;}
                                @foreach (var item in Model.PIReviseds)
                                {
                                    sl++;
                                    <tr>
                                        <td>@sl</td>
                                        <td>@item.PICode</td>
                                        <td>@item.UserId</td>
                                        <td>@item.RevisedDate.ToShortDateString()</td>
                                        <td>@item.Time</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>