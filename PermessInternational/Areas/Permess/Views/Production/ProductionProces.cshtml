@model PermessInternational.Areas.Permess.ViewModels.ProductionOrderViewModels
<section class="content-header">
    <h1>
        Production Process Lists
        <small>preview of production process lists</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    @if (ViewBag.data != null)
                    {
                        <h2 class="text-danger">@ViewBag.data</h2>
                    }
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Product</th>
                                <th>Article</th>
                                <th>Construction</th>
                                <th>Softness</th>
                                <th>Source</th>
                                <th>Width</th>
                                <th>Quantity</th>
                                <th>Days</th>
                                <th>Process A</th>
                                <th>Details A</th>
                                <th>Process B</th>
                                <th>Details B</th>
                                <th>Process C</th>
                                <th>Details C</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ProductionOrders)
                            {

                                <tr>
                                    <td>@item.Serial</td>
                                    <td>@item.Product</td>
                                    <td>@item.Article</td>
                                    <td>@item.Construction</td>
                                    <td>@item.Softness</td>
                                    <td>@item.Source</td>
                                    <td>@item.Width</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Time</td>
                                    <td><a href="@Url.Action("ProcessA","Production",new { id=item.OrderId})" class="btn btn-primary">A</a></td>
                                    <td><a href="@Url.Action("UpdateProcessA","Production",new { id=item.OrderId})" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                                    <td><a href="@Url.Action("ProcessB","Production",new { id=item.OrderId})"class="btn btn-primary">B</a></td>
                                    <td><a href="@Url.Action("UpdateProcessB","Production",new { id=item.OrderId})" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                                    <td><a href="@Url.Action("ProcessC","Production",new { id=item.OrderId})"class="btn btn-primary">F</a></td>
                                    <td><a href="@Url.Action("UpdateProcessC","Production",new { id=item.OrderId})" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>