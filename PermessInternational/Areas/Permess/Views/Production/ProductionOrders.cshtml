@model PermessInternational.Areas.Permess.ViewModels.ProductionOrderViewModels
@{ Layout = null;}
<section class="content-header">
    <h1>
        Production Order Index
        <small>preview of production order index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    @{ var data = "";
                        var range = "";
                    }
                    @if (TempData["sort"] != null)
                    {
                        data = TempData["sort"] as string;                        
                    }
                    @if (TempData["range"] != null)
                    {                        
                        range = TempData["range"] as string;
                    }
                    <h2 class="text-danger">@data</h2>
                    <h2 class="text-danger">@range</h2>
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Product</th>
                                <th>Article</th>
                                <th>Construction</th>
                                <th>Softness</th>
                                <th>Source</th>
                                <th>Width</th>
                                <th>Assigned</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Time</th>
                                <th>Quantity</th>
                                <th>Raw Materials</th>
                                @*<th>Go Process</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ProductionOrders)
                            {

                                <tr>
                                    <td>@item.Serial</td>
                                    <td>@item.Product</td>
                                    <td>@item.Article</td>
                                    <td>@item.Construction</td>
                                    <td>@item.Softness</td>
                                    <td>@item.Source</td>
                                    <td>@item.Width</td>
                                    <td>@item.Assigned</td>
                                    <td>@item.ProcessType</td>
                                    <td>@item.Status</td>
                                    <td>@item.Time</td>
                                    <td>@item.Amount</td>
                                    <td><a href="@Url.Action("OrderRawMaterial","Production",new { id=item.OrderId})" class="btn btn-primary">Add</a></td>
                                    @*<td><a href="@Url.Action("ProductionChange", "Production", new { id = item.OrderId })" class="btn btn-primary">Process</a></td>*@


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>