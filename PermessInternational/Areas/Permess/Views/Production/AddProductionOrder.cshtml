@model PermessInternational.Areas.Permess.ViewModels.ProductSettingViewModels

@{ Layout = null;}
<section class="content-header">
    <h1>
        Production Order
        <small>adding new production order information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" )"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;margin-top:150px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @using (Html.BeginForm("AddProductionOrder", "Production", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="col-form-label">P.I Code</label>
                            <input type="text" class="form-control" name="SICode" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Product</label>
                            <select class="form-control" name="ProductId">
                                @foreach (var item in Model.Products)
                                {
                                    <option value="@item.ProductId">@item.ProductName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Article</label>
                            <select class="form-control" name="ArticleId">
                                @foreach (var item in Model.ArticleProductSettings)
                                {
                                    <option value="@item.ItemId">@item.ItemName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Alt. Article</label>
                            <input type="text" name="AltArticleId" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Width</label>
                            <select class="form-control" name="WidthId">
                                @foreach (var item in Model.WidthProductSettings)
                                {
                                    <option value="@item.ItemId">@item.ItemName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Construction</label>
                            <select class="form-control" name="ConstructionId">
                                @foreach (var item in Model.ConstructionProductSettings)
                                {
                                    <option value="@item.ItemId">@item.ItemName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Softness</label>
                            <select class="form-control" name="SoftnessId">
                                @foreach (var item in Model.SoftnessProductSettings)
                                {
                                    <option value="@item.ItemId">@item.ItemName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Source</label>
                            <select class="form-control" name="SourceId">
                                @foreach (var item in Model.SourceProductSettings)
                                {
                                    <option value="@item.ItemId">@item.ItemName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="col-form-label">Color</label>
                            <select class="form-control" name="ColorId">
                                @foreach (var item in Model.ColorProductSettings)
                                {
                                    <option value="@item.ItemId">@item.ItemName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Required Amount</label>
                            <input type="text" class="form-control" name="RequiredAmount" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Assigned Time</label>
                            <input type="text" class="form-control" name="AssignedTime" />
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Process Type</label>
                            <select class="form-control" name="ProcessType">
                                <option value="1">Non Woven</option>
                                <option value="2">Woven</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Assign To</label>
                            <select class="form-control" name="AssignTo">
                                <option value="1">Factory 1</option>
                                <option value="2">Factory 2</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Third Party Status</label>
                            <select class="form-control" name="ThirdPartyStatus">
                                @foreach (var item in Model.YesNoModels)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Description</label>
                            <textarea class="form-control" name="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-info">SUBMIT</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>