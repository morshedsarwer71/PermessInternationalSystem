@model PermessInternational.Areas.Global.ViewModels.SystemUserViewModels
@{
    Layout = null;
}

<section class="content-header">
    <h1>
        User Index
        <small>preview of users index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">User</a></li>
        <li class="active">Users</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var sl = 0;
                                var role = "";
                            }
                            @foreach (var item in Model.SystemUsers)
                            {
                                foreach (var roles in Model.UserRoles)
                                {
                                    if (roles.UserRoleId == item.UserRole)
                                    {
                                        role = roles.UserRoleName;
                                    }
                                }
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.Name</td>
                                    <td>@item.EmailAddress</td>
                                    <td>@role</td>
                                    <td><a href="@Url.Action("EditUserRole","GlobalData",new { id=item.UserID})"><i class="fa fa-pencil"></i></a></td>
                                    @*<td><a href="@Url.Action("UpdateBuyer","InventoryData",new {id=item.UserID })"><i class="fa fa-pencil"></i></a></td>
                                        <td style="color:red"><a href="" onclick="Delete(' @item.UserID ')"><i class="fa fa-trash"></i></a></td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>