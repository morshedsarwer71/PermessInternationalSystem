@model PermessInternational.Areas.Global.ViewModels.RoleUserViewModels

@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Add User
        <small>adding new user information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none;margin-top:150px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    <div class="form-group">
                        <label class="col-form-label">User Name</label>
                        <input id="txtName" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User Email</label>
                        <input id="txtEmail" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User Password</label>
                        <input id="txtPassword" type="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">User Role</label>
                        <select class="form-control" id="userRole">
                            @foreach (var item in Model.UserRoles)
                            {
                                <option value="@item.UserRoleId">@item.UserRoleName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button id="btnSave" type="submit" value="submit" class="btn btn-info">SUBMIT</button>
                    </div>

                </div>


            </div>
        </div>

    </div>
</section>